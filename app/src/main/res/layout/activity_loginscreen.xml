<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/txt_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arbfonts_abdo_master_medium"
        android:text="Login to\nyour account"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/btn_back"
        app:layout_constraintTop_toBottomOf="@+id/btn_back"
        android:paddingTop="150dp"/>


    <EditText
        android:id="@+id/etxt_username"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/username"
        android:fontFamily="@font/arbfonts_abdo_master_medium"
        android:hint="Username"
        android:inputType="text"
        android:paddingLeft="67dp"
        android:paddingRight="25dp"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_logo"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/etxt_password"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/password"
        android:fontFamily="@font/arbfonts_abdo_master_medium"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="67dp"
        android:layout_marginTop="10dp"
        android:paddingRight="25dp"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_username"/>

    <CheckBox
        android:id="@+id/cb_remeber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorGreen"
        android:fontFamily="@font/arbfonts_hacen_samra_it"
        android:layoutDirection="rtl"
        android:text="Remember me"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_password"
        android:layout_marginLeft="140dp"/>



    <Button
        android:id="@+id/btn_login"
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:background="@drawable/btn_login"
        android:fontFamily="@font/arbfonts_abdo_master_regular"
        android:text="Login"
        android:textColor="@color/colorWhite"
        android:textSize="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_remeber"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/tvForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your password?"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"/>

</androidx.constraintlayout.widget.ConstraintLayout>

